<header>
  <div class="container">
    <h1>Messages</h1>
  </div>
</header>

<main>
  <div class="container">
    <div class="row">
      <% @chatrooms.each do |chatroom| %>
        <% if chatroom.gift_request.requester != current_user && chatroom.gift_request.shopper != current_user %>
          <%= link_to  gift_request_chatrooms_path(chatroom) do %>
            <div class="card-gift">
            <%= image_tag chatroom.gift_request.requester.profile_picture, class: "avatar" %>
              <p><%= chatroom.gift_request.requester.first_name %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</main>
