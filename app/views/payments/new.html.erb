<header>
  <h1>Checkout Summary</h1>
</header>

<main>
  <div class="container">
    <div><%#=image_tag @order.teddy.photo_url, width: '100%' %></div>
      <p class="mt-4">Paying <strong><%= humanized_money_with_symbol @giftrequest.price_cents %></strong> for
        <strong><%= @giftrequest.product1 %> <%= "|" if @giftrequest.product2 %> <%= @giftrequest.product2 %> <%= "|" if @giftrequest.product3 %> </strong> 
        to <strong> <%= @giftrequest.shopper.first_name %></strong>. 
      </p>

      <button id="pay" class="btn btn-primary mt-3">Pay Now</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @giftrequest.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</main>

