<header>
  <div class="container">
    <h1>Gift Requests in your Area</h1>
  </div>
</header>

<main >
  <div class="container">
    <div class="row">
      <%@opengiftrequests.each do |giftrequest| %>
        <div class="col-4 pl-0">
          <%= link_to gift_request_path(giftrequest) do %>
            <div class="request-card">
              <div>
                <p><b>Products: </b><%= giftrequest.product1 %> <%= "|" if giftrequest.product2 %> <%= giftrequest.product2 %> <%= "|" if giftrequest.product3 %> <%= giftrequest.product3 %></p>
                <p><b>Gift for: </b> <%= giftrequest.recipient_name%></p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="align-self-end mb-0"><small><%= "Delivery Due Date: #{giftrequest.delivery_due_date.strftime("%-d.%-m.%Y, %H:%M")}" if giftrequest.delivery_due_date %></small></p>
                <%= image_tag(giftrequest.requester.profile_picture, class: "avatar") %>
              </div>
            </div>
          <%end%>
        </div>
      <% end %>
    </div>
  </div>
</main>
