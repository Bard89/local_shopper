<div class="modal fade" id="priceModal" tabindex="-1" role="dialog" aria-labelledby="priceModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="priceModalLabel">How much money was spent?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for gift_request do |f| %>
          <% f.input :price_cents, label: false %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-flat" data-dismiss="modal">Close</button>
        <%= link_to "Save", gift_price_gift_request_path(request), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
